generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  homes     Home[]
}

model Home {
  id        String   @id @default(uuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rooms     Room[]
  categories Category[]
  items     Item[]
  tags      Tag[]
}

model Room {
  id        String   @id @default(uuid())
  name      String
  homeId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  home      Home     @relation(fields: [homeId], references: [id], onDelete: Cascade)
  items     Item[]

  @@unique([homeId, name])
}

model Category {
  id        String   @id @default(uuid())
  name      String
  homeId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  home      Home     @relation(fields: [homeId], references: [id], onDelete: Cascade)
  items     Item[]

  @@unique([homeId, name])
}

model Item {
  id          String     @id @default(uuid())
  homeId      String
  roomId      String?
  categoryId  String?

  name        String
  description String?
  quantity    Int        @default(1)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  home        Home       @relation(fields: [homeId], references: [id], onDelete: Cascade)
  room        Room?      @relation(fields: [roomId], references: [id], onDelete: SetNull)
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  photos      ItemPhoto[]
  tags        ItemTag[]
}

model ItemPhoto {
  id        String   @id @default(uuid())
  itemId    String
  url       String
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
}

model Tag {
  id        String   @id @default(uuid())
  homeId    String
  name      String
  createdAt DateTime @default(now())

  home      Home     @relation(fields: [homeId], references: [id], onDelete: Cascade)
  items     ItemTag[]

  @@unique([homeId, name])
}

model ItemTag {
  itemId String
  tagId  String

  item   Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([itemId, tagId])
  @@index([tagId])
}
